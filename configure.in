AC_INIT(message-of-doom)

AM_CONFIG_HEADER(config.h)
AM_INIT_AUTOMAKE(libbonoboui2, 1.97.0)

AM_MAINTAINER_MODE

if test -z "$CERTIFIED_GNOMIE"; then
  cat $srcdir/message-of-doom
  exit 1
fi

GNOME_COMMON_INIT
GNOME_PLATFORM_GNOME_2(yes, force)

AC_ISC_POSIX
AC_PROG_CC
AC_STDC_HEADERS
AM_PROG_LIBTOOL
AC_PROG_YACC
AC_PATH_PROGS(PATH_TO_XRDB, "xrdb")

GNOME_COMPILE_WARNINGS

dnl utility conditional
AM_CONDITIONAL(FALSE, test "x" = "y")

ALL_LINGUAS="az es fr it nn no sk sv wa zh_TW.Big5"
AM_GNOME2_GETTEXT

AC_SUBST(CFLAGS)
AC_SUBST(CPPFLAGS)
AC_SUBST(LDFLAGS)

dnl
dnl Start of pkg-config checks
dnl
PKG_CHECK_MODULES(LIBGNOMECANVAS, libgnomecanvas-2.0 >= 1.96.0)
AC_SUBST(LIBGNOMECANVAS_CFLAGS)
AC_SUBST(LIBGNOMECANVAS_LIBS)

PKG_CHECK_MODULES(LIBBONOBO, libbonobo-2.0 >= 1.97.0)
AC_SUBST(LIBBONOBO_CFLAGS)
AC_SUBST(LIBBONOBO_LIBS)

PKG_CHECK_MODULES(LIBGNOME, libgnome-2.0 >= 1.96.0)
AC_SUBST(LIBGNOME_CFLAGS)
AC_SUBST(LIBGNOME_LIBS)

AC_OUTPUT([
Makefile
po/Makefile.in
intl/Makefile
bonobo/Makefile
bonobo/libbonoboui-2.0.pc
samples/Makefile
samples/bonoboui-hello/Makefile
samples/compound-doc/Makefile
samples/compound-doc/container/Makefile
tests/Makefile
doc/Makefile
])

cat $srcdir/message-of-doom
